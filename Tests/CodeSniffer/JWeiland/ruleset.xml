<?xml version="1.0"?>
<ruleset name="JWeiland">
    <description>Based on PSRDefault of de-swebhosting/php-codestyle. Adjust only if REALLY neccessary!</description>
    <rule ref="PSRDefault">
        <!--
        This file is invalid since TYPO3 11. Deactivate processing of this file
        -->
        <exclude-pattern>class.ext_update.php</exclude-pattern>
    </rule>
    <rule ref="Squiz.Arrays.ArrayDeclaration">
        <!--
        Deactivated as it will migrate arrays with one entry to single-line array.
        This test can not be deactivated individually, that's why we have to deractivate full file.
        php-cs-fixer would be a better option to check for array syntax
        -->
        <exclude-pattern>*</exclude-pattern>
    </rule>
    <rule ref="Generic.Files.LineLength">
        <!--
        Disable line check completely.
        TYPO3 works with very long classnames, interfacenames and at some places
        with FQCN
        -->
        <exclude-pattern>*</exclude-pattern>
    </rule>
    <rule ref="PSR1.Methods.CamelCapsMethodName">
        <!--
        TYPO3's DataHandler hooks contains underscores in method names.
        That's why we have to allow underscores here, too
        -->
        <exclude-pattern>Classes/Hooks/DataHandler.php</exclude-pattern>
    </rule>
    <rule ref="Squiz.NamingConventions.ValidVariableName.NotCamelCaps">
        <!--
        ext_emconf.php needs upper CASE variables.
        -->
        <exclude-pattern>ext_emconf.php</exclude-pattern>
    </rule>
</ruleset>
